{
  "name": "fastify-starter",
  "version": "0.2.1",
  "description": "Fastify Typescript Starter",
  "keywords": [
    "fastify",
    "fastify-starter"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "yarn compile-schemas && yarn dev:watch",
    "dev:watch": "tsx watch src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@fastify/autoload": "5.7.1",
    "@fastify/cors": "8.2.0",
    "@fastify/env": "4.2.0",
    "@fastify/helmet": "10.1.0",
    "@fastify/multipart": "7.4.1",
    "@fastify/sensible": "5.2.0",
    "@fastify/swagger": "8.3.1",
    "@fastify/swagger-ui": "1.4.0",
    "@sinclair/typebox": "0.25.24",
    "altair-fastify-plugin": "5.0.17",
    "close-with-grace": "1.1.0",
    "fastify": "4.13.0",
    "fastify-cli": "5.7.1",
    "fastify-plugin": "4.5.0",
    "fastify-tsconfig": "1.0.1",
    "graphql": "16.6.0",
    "mercurius": "12.2.0",
    "mercurius-codegen": "5.0.1",
    "mercurius-integration-testing": "8.0.0",
    "nexus": "1.3.0",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/busboy": "1.5.0",
    "@types/node": "18.14.5",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/tap": "15.0.8",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "cpy-cli": "4.2.0",
    "cross-env": "7.0.3",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-xo": "0.43.1",
    "eslint-config-xo-typescript": "0.56.0",
    "fast-json-stringify": "5.6.2",
    "husky": "8.0.3",
    "json-schema-to-typescript": "12.0.0",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "sort-package-json": "2.4.1",
    "tap": "16.3.4",
    "ts-node": "10.9.1",
    "tsup": "6.6.3",
    "tsx": "3.12.3",
    "typescript": "5.0.2"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}
