{
  "name": "fastify-starter",
  "version": "0.0.2",
  "description": "Fastify Typescript Starter",
  "keywords": [
    "fastify",
    "fastify-starter"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "yarn compile-schemas && yarn dev:watch",
    "dev:watch": "ts-node-dev src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "start": "ts-node src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.23.4",
    "close-with-grace": "^1.1.0",
    "fastify": "^3.28.0",
    "fastify-autoload": "^3.12.0",
    "fastify-cli": "^2.15.0",
    "fastify-cors": "^6.0.3",
    "fastify-helmet": "^7.0.1",
    "fastify-multipart": "^5.3.1",
    "fastify-plugin": "^3.0.1",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^5.1.1",
    "fastify-tsconfig": "^1.0.1",
    "graphql": "^16.4.0",
    "mercurius": "^9.3.6",
    "mercurius-codegen": "^3.3.1",
    "mercurius-integration-testing": "^4.0.0",
    "nexus": "^1.3.0",
    "swagger-jsdoc": "^6.2.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/busboy": "1.5.0",
    "@types/node": "16.11.29",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/tap": "15.0.7",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "cpy-cli": "^4.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "0.40.0",
    "eslint-config-xo-typescript": "0.50.0",
    "husky": "7.0.4",
    "json-schema-to-typescript": "10.1.5",
    "lint-staged": "12.4.0",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.55.0",
    "tap": "16.1.0",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "tsup": "^5.12.6",
    "typescript": "4.6.3"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}