{
  "name": "fastify-starter",
  "version": "0.0.1",
  "description": "Fastify Typescript Starter",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "start": "ts-node src/server.ts",
    "build:ts": "npm run clean && tsc",
    "clean": "rimraf dist",
    "dev": "yarn compile-schemas && yarn dev:watch",
    "dev:watch": "ts-node-dev src/server.ts",
    "prepare": "husky install",
    "compile-schemas": "json2ts -i src/schemas -o src/types"
  },
  "keywords": [
    "fastify",
    "fastify-starter"
  ],
  "author": "Huynh Duc Dung",
  "license": "MIT",
  "dependencies": {
    "@sinclair/typebox": "^0.23.2",
    "close-with-grace": "^1.1.0",
    "fastify": "^3.25.1",
    "fastify-autoload": "^3.9.0",
    "fastify-cli": "^2.14.0",
    "fastify-cors": "^6.0.2",
    "fastify-multipart": "^5.2.1",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^4.13.0",
    "fastify-tsconfig": "^1.0.1",
    "graphql": "^16.2.0",
    "mercurius": "^9.0.0",
    "mercurius-codegen": "^3.3.0",
    "mercurius-integration-testing": "^3.2.0",
    "nexus": "^1.1.0",
    "swagger-jsdoc": "^6.1.0"
  },
  "devDependencies": {
    "@types/busboy": "0.3.1",
    "@types/node": "16.11.17",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/tap": "15.0.5",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "cross-env": "7.0.3",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-typescript": "^0.47.1",
    "husky": "7.0.4",
    "json-schema-to-typescript": "10.1.5",
    "lint-staged": "12.1.4",
    "prettier": "2.5.1",
    "tap": "15.1.5",
    "ts-node": "^10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}
